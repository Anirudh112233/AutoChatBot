{
    "manifest_version": 3,
    "name": "Auto Chat Bot",
    "description": "This Chatbot will help to build conversation while the actual person is offline.",
    "version":"1.0",
    "action":{
        "default_popup": "popup/popup.html"
    },
    "icons":{
        "16":"images/icon_16.png",
        "32":"images/icon_32.png",
        "64":"images/icon_64.png",
        "128":"images/icon_128.png"
    },
    "background":{
        "service_worker": "background.js",
        "type":"module"
    },
    "permissions": [
        "storage" 
    ]
}